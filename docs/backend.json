
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile, containing personal information and serving as an anchor for their saved financial calculations.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the UserProfile entity."
        },
        "email": {
          "type": "string",
          "description": "The user's email address, used for identification.",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "description": "The user's first name."
        },
        "lastName": {
          "type": "string",
          "description": "The user's last name."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the user profile was created.",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "Timestamp indicating when the user profile was last updated.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email",
        "createdAt"
      ]
    },
    "SIPCalculation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SIPCalculation",
      "type": "object",
      "description": "Stores the parameters and results of a user's Systematic Investment Plan (SIP) calculation.",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "monthlyInvestment": {
          "type": "number"
        },
        "investmentDurationYears": {
          "type": "number"
        },
        "expectedReturnRate": {
          "type": "number"
        },
        "totalInvestedAmount": {
          "type": "number"
        },
        "totalInterestEarned": {
          "type": "number"
        },
        "finalValue": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "userId",
        "name",
        "monthlyInvestment",
        "investmentDurationYears",
        "expectedReturnRate",
        "finalValue",
        "createdAt"
      ]
    },
    "SWPCalculation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SWPCalculation",
      "type": "object",
      "description": "Stores a user's Systematic Withdrawal Plan (SWP) calculation.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "initialInvestment": { "type": "number" },
        "monthlyWithdrawal": { "type": "number" },
        "years": { "type": "number" },
        "expectedReturnRate": { "type": "number" },
        "totalWithdrawn": { "type": "number" },
        "finalBalance": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "name", "initialInvestment", "monthlyWithdrawal", "years", "expectedReturnRate", "finalBalance", "createdAt"]
    },
    "CompoundCalculation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CompoundCalculation",
      "type": "object",
      "description": "Stores a user's Compound Interest calculation.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "principal": { "type": "number" },
        "rate": { "type": "number" },
        "years": { "type": "number" },
        "frequency": { "type": "number" },
        "totalInterest": { "type": "number" },
        "totalValue": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "name", "principal", "rate", "years", "frequency", "totalValue", "createdAt"]
    }
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "description": "User profile document."
        }
      },
      {
        "path": "/users/{userId}/sipCalculations/{id}",
        "definition": {
          "entityName": "SIPCalculation",
          "description": "Subcollection for SIP calculations."
        }
      },
      {
        "path": "/users/{userId}/swpCalculations/{id}",
        "definition": {
          "entityName": "SWPCalculation",
          "description": "Subcollection for SWP calculations."
        }
      },
      {
        "path": "/users/{userId}/compoundCalculations/{id}",
        "definition": {
          "entityName": "CompoundCalculation",
          "description": "Subcollection for Compound Interest calculations."
        }
      }
    ]
  }
}
